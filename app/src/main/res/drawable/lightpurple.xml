<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 注意：有 state 的 item 要擺在前面 -->
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="#907dac" />
            <stroke
                android:width="1dp"
                android:color="#907dac" />
            <corners
                android:radius="2dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>

    <item>
        <shape>
            <gradient
                android:startColor="#907dac"
                android:centerColor="#907dac"
                android:endColor="#907dac"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#907dac" />
            <corners
                android:radius="2dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>

</selector>