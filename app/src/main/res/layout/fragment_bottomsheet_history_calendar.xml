<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="36dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="20dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txt_filter_calendar_first"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="36dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_weight="1"
            android:background="@drawable/corners_grown"
            android:fontFamily="@font/myfont3"
            android:gravity="center"
            android:padding="10dp"
            android:textColor="@color/greyish_brown"
            android:textSize="24sp"
            android:textStyle="bold"
            tools:text="起點" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            app:srcCompat="@drawable/icon_arrow_right" />

        <TextView
            android:id="@+id/txt_filter_calendar_second"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="36dp"
            android:layout_marginBottom="20dp"
            android:layout_weight="1"
            android:background="@drawable/corners_grown"
            android:fontFamily="@font/myfont3"
            android:gravity="center"
            android:padding="10dp"
            android:textColor="@color/greyish_brown"
            android:textSize="24sp"
            android:textStyle="bold"
            tools:text="終點" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="20dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/cb_calendar_filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:fontFamily="@font/myfont3"
            android:gravity="center"
            android:text="起終點相同"
            android:textColor="@color/greyish_brown"
            android:textSize="18sp"
            android:textStyle="bold"
            android:buttonTint="@color/bar" />

        <Button
            android:id="@+id/btn_calendar_submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:background="@drawable/corners_orange"
            android:fontFamily="@font/myfont3"
            android:text="套用"
            android:textColor="@color/greyish_brown"
            android:textSize="24sp"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>