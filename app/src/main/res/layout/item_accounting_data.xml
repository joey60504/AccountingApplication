<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/corners_rim_grey_1"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txt_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/myfont3"
            android:padding="10dp"
            android:textColor="@color/greyish_brown"
            android:textSize="18sp"
            android:textStyle="bold"
            tools:text="2023/06/12(週一)" />

        <TextView
            android:id="@+id/txt_date_price"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:fontFamily="@font/myfont3"
            android:gravity="center"
            android:textColor="@color/greyish_brown"
            android:textSize="14sp"
            android:textStyle="bold"
            tools:text="日結：＄1000" />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_data_tag"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="1dp"
        tools:itemCount="2"
        tools:listitem="@layout/item_accounting_data_tag" />

</LinearLayout>