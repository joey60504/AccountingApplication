<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:clickable="true"
    android:focusable="true"
    app:cardCornerRadius="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/invest_date"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="@drawable/lightpurple"
            android:fontFamily="@font/myfont"
            android:gravity="center"
            android:text="XX/XX"
            android:textColor="@color/Beige"
            android:textSize="20sp"
            app:autoSizeMaxTextSize="14sp"
            app:autoSizeTextType="uniform" />

        <TextView
            android:id="@+id/invest_kind"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="@drawable/beige_rectangle"
            android:fontFamily="@font/myfont"
            android:gravity="center"
            android:text="XX"
            android:textSize="20sp"
            app:autoSizeMaxTextSize="14sp"
            app:autoSizeTextType="uniform" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView15"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:fontFamily="@font/myfont"
                    android:gravity="center"
                    android:text="Buy"
                    android:textSize="20sp"
                    app:autoSizeMaxTextSize="18sp"
                    app:autoSizeTextType="uniform" />

                <TextView
                    android:id="@+id/invest_buy"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:fontFamily="@font/myfont"
                    android:gravity="center"
                    android:textColor="@color/plusmoney"
                    android:textSize="16sp"
                    app:autoSizeMaxTextSize="18sp"
                    app:autoSizeTextType="uniform" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView17"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:fontFamily="@font/myfont"
                    android:gravity="center"
                    android:text="Sell"
                    android:textSize="20sp"
                    app:autoSizeMaxTextSize="18sp"
                    app:autoSizeTextType="uniform" />

                <TextView
                    android:id="@+id/invest_sell"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:fontFamily="@font/myfont"
                    android:gravity="center"
                    android:textColor="@color/decmoney"
                    android:textSize="16sp"
                    app:autoSizeMaxTextSize="18sp"
                    app:autoSizeTextType="uniform" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:srcCompat="@drawable/magnifier_icon" />
        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>