<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AccountingApplication" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/bar</item>
        <item name="colorPrimaryVariant">@color/bar</item>
        <item name="colorOnPrimary">@color/bar</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/bar</item>
        <item name="colorSecondaryVariant">@color/bar</item>
        <item name="colorOnSecondary">@color/bar</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="CalenderViewCustom" parent="Theme.AppCompat">
        <item name="colorAccent">@color/bar</item>
        <item name="colorPrimary">@color/bar</item>
    </style>

    <style name="CalenderViewDateCustomText" parent="Theme.AppCompat">
        <item name="android:textColor">@color/greyish_brown</item>
        <item name="android:weekNumberColor">@color/bar</item>
        <item name="android:fontFamily">@font/myfont3</item>
    </style>

    <style name="CalenderViewWeekCustomText" parent="Theme.AppCompat">
        <item name="android:textColor">@color/greyish_brown</item>
        <item name="android:fontFamily">@font/myfont3</item>
    </style>


    <style name="Theme.AccountingApplication.AppBarOverlay" parent="Theme.AppCompat.Light.NoActionBar" />

    <style name="Theme.AccountingApplication.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>